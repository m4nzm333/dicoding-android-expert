<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovieActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNamaMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPoster"

        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Movie1" />

    <TextView
        android:id="@+id/labelRilis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvRilis"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:text="Tahun Rilis" />

    <TextView
        android:id="@+id/tvRilis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPoster"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textSize="30sp"
        tools:text="2020" />

    <TextView
        android:id="@+id/labelRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvRating"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:text="Rating" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPoster"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textSize="30sp"
        tools:text="100%" />

    <TextView
        android:id="@+id/labelDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPoster"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="Deskripsi" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPoster"
        android:layout_alignStart="@+id/ivPoster"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        tools:text="Lorem ipsum umet dolor" />

</RelativeLayout>